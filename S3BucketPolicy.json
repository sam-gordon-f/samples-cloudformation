{
  "Description": "Sample S3BucketPolicy Template",
  "Parameters": {
    "environmentType": {
      "Description": "environment type that the stack relates to (dev | prod | etc...)",
      "Type": "String"
    },
    "bucketArn": {
      "Description": "bucket arn that the policy relates to",
      "Type": "String"
    }
  },
  "Resources": {
    "s3bucketPolicyTest": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "Bucket": Ref("bucketArn"),
        "PolicyDocument": {
          "Statement": [
            {
              "Action": [
                "s3:GetObject"
              ],
              "Effect": "Allow",
              "Resource": Ref("bucketArn"),
              "Principal": "*",
              "Condition": {
                "StringLike": {
                  "aws:Referer": [
                    "http://www.example.com/*",
                    "http://example.com/*"
                  ]
                }
              }
            }
          ]
        }
      }
    }
  }
}
